@model IdealBizUI.ViewModels.View_AccountChart

<h4>Are you sure you want to delete this Account Ledger?</h4>
<div>
    @*<h4>View_AccountChart</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.txtAccountNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.txtAccountNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.txtAccountName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.txtAccountName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.intAccountGroup)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.intAccountGroup)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.isPosting)
        </dt>
        <dd class="col-sm-10">
            @Html.CheckBoxFor(model => model.isPosting, new {disabled = "disabled" })
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.isBlocked)
        </dt>
        <dd class="col-sm-10">
            @Html.CheckBoxFor(model => model.isBlocked, new { disabled = "disabled" })
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IntIncomeOrBalance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntIncomeOrBalance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IntAccountType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntAccountType)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="txtAccountNumber" />
        @{
            var deletestatus = ViewBag.DeleteStatus;
        }

        @if (ViewBag.DeleteStatus != false)
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
            <p>
                <a asp-action="Index"> Back to List</a>
            </p>
            
        }
        else
        {
            <h5 class="alert-danger">This account ledger cannot be deleted because it already has entries?</h5>
            <a asp-action="Index"> Back to List</a>
        }

    </form>
</div>
