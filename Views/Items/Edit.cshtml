@model IdealBizUI.ViewModels.View_Items
@using IdealBizUI.Enums;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edit Item</h4>

<hr />

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

    <div class="row">

        @*column for form inputs*@
        <div class="col">


            <div class="row">

                <div class="col">

                    <div class="form-group">
                        <label asp-for="ItemCode" class="control-label"></label>
                        <input asp-for="ItemCode" class="form-control" readonly="readonly" />
                        <span asp-validation-for="ItemCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ItemName" class="control-label"></label>
                        <input asp-for="ItemName" class="form-control" />
                        <span asp-validation-for="ItemName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ItemType" class="control-label"></label>

                        <select asp-for="ItemType" class="form-control" asp-items="Html.GetEnumSelectList<EnumItems.ItemType>()">
                            <option></option>
                        </select>

                        <span asp-validation-for="ItemType" class="text-danger"></span>
                    </div>


                </div>
                <div class="col">

                    @*Column-2*@

                    <div class="form-group">
                        <label asp-for="CategoryID" class="control-label"></label>

                        <select class="form-control" asp-for="CategoryID" asp-items="Model.ItemsCategories">
                            <option></option>
                        </select>

                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BaseUnitOfMeasure" class="control-label"></label>
                        <select asp-for="BaseUnitOfMeasure" class="form-control" asp-items="Model.UnitOfMeasures">
                            <option></option>
                        </select>
                        <span asp-validation-for="BaseUnitOfMeasure" class="text-danger"></span>
                    </div>

                    <div class="form-check form-check-inline">

                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ItemBlocked" /> @Html.DisplayNameFor(model => model.ItemBlocked)
                        </label>
                    </div>


                </div>

                <div class="col">

                    <img src="@Url.Content(Model.ImagePath)" class="img-thumbnail" alt="Image Not Found">

                </div>

            </div>

            <hr />

            <div class="row">
                <div class="col">

                    <div class="form-group">
                        <label asp-for="ShelfNo" class="control-label"></label>
                        <input asp-for="ShelfNo" class="form-control" />
                        <span asp-validation-for="ShelfNo" class="text-danger"></span>
                    </div>

                </div>
                <div class="col">

                    

                    <div class="form-group">
                        <label asp-for="ItemFile" class="control-label"></label>
                        <input asp-for="ItemFile" type="file" class="form-control" />
                        
                    </div>


                </div>
            </div>

            <hr />

            <div class="row">

                <div class="col">

                    <div class="form-group">

                        <label asp-for="CostingMethod" class="control-label"></label>
                        <select class="form-control" asp-for="CostingMethod" asp-items="Html.GetEnumSelectList<EnumItems.CostingMethod>()">
                            <option></option>
                        </select>
                        <span asp-validation-for="CostingMethod" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="StandardCost" class="control-label"></label>
                        <input asp-for="StandardCost" class="form-control" />
                        <span asp-validation-for="StandardCost" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UnitCost" class="control-label"></label>
                        <input asp-for="UnitCost" class="form-control" />
                        <span asp-validation-for="UnitCost" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IndirectCost" class="control-label"></label>
                        <input asp-for="IndirectCost" class="form-control" />
                        <span asp-validation-for="IndirectCost" class="text-danger"></span>
                    </div>

                </div>

                <div class="col">

                    <div class="form-group">
                        <label asp-for="InventoryPostingGroup" class="control-label"></label>
                        <input asp-for="InventoryPostingGroup" class="form-control" />
                        <span asp-validation-for="InventoryPostingGroup" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="VATProductPostingGroup" class="control-label"></label>
                        <input asp-for="VATProductPostingGroup" class="form-control" />
                        <span asp-validation-for="VATProductPostingGroup" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="GeneralProductPostingGroup" class="control-label"></label>
                        <input asp-for="GeneralProductPostingGroup" class="form-control" />
                        <span asp-validation-for="GeneralProductPostingGroup" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <hr />

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="SellingPrice" class="control-label"></label>
                        <input asp-for="SellingPrice" class="form-control" />
                        <span asp-validation-for="SellingPrice" class="text-danger"></span>
                    </div>

                    <div class="form-check form-check-inline">

                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="AllowInvoiceDiscount" /> @Html.DisplayNameFor(model => model.AllowInvoiceDiscount)
                        </label>

                    </div>

                </div>
                <div class="col">

                    <div class="form-group">
                        <label asp-for="SalesUnitOfMeasure" class="control-label"></label>

                        <select asp-for="SalesUnitOfMeasure" class="form-control" asp-items="Model.UnitOfMeasures">
                            <option></option>
                        </select>

                        <span asp-validation-for="SalesUnitOfMeasure" class="text-danger"></span>
                    </div>

                    <div class="form-check form-check-inline">

                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="SalesBlocked" /> @Html.DisplayNameFor(model => model.SalesBlocked)
                        </label>

                    </div>

                </div>

            </div>

            <hr />

            <div class="row">

                <div class="col">
                    <div class="form-group">
                        <label asp-for="ReplenishSystem" class="control-label"></label>

                        <select class="form-control" asp-for="ReplenishSystem" asp-items="Html.GetEnumSelectList<EnumItems.ReplenishType>()">
                            <option></option>
                        </select>

                        <span asp-validation-for="ReplenishSystem" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PurchaseVendor" class="control-label"></label>
                        <input asp-for="PurchaseVendor" class="form-control" />
                        <span asp-validation-for="PurchaseVendor" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        <label asp-for="PuchaseUnitOfMeasure" class="control-label"></label>
                        <select asp-for="PuchaseUnitOfMeasure" class="form-control" asp-items="Model.UnitOfMeasures">
                            <option></option>
                        </select>
                        <span asp-validation-for="PuchaseUnitOfMeasure" class="text-danger"></span>
                    </div>

                    <div class="form-check form-check-inline">

                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="PurchaseBlocked" /> @Html.DisplayNameFor(model => model.PurchaseBlocked)
                        </label>
                    </div>

                </div>


            </div>



            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>

        </div>

        @*column for image and etc*@
      
    </div>


</form>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
