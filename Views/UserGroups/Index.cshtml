@*@model IEnumerable<IdealBizUI.Models.UserGroup>*@
@model IdealBizUI.ViewModels.View_UserGroup

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-link" data-toggle="modal" data-target="#newModalUserGroup">
    Create New
</button>

<!-- Add New User Group -->
<div class="modal fade" id="newModalUserGroup" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form id="saveForm" method="post">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add New User Group</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">

                        <label asp-for="_UserGroup.GroupName" class="control-label"></label>
                        <input asp-for="_UserGroup.GroupName" class="form-control" />
                        <span asp-validation-for="_UserGroup.GroupName" class="text-danger"></span>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">Close</button>
                    <button id="btnAddNew" type="button" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Delete User Group -->
<div class="modal fade" id="deleteModalUserGroup" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form id="saveform" method="post">


                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Delete User Group</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5>Are You Sure You want to delete this user group?</h5>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">Close</button>
                    <button id="btnDelete" type="button" class="btn btn-primary">Delete</button>
                </div>

            </form>
        </div>
    </div>
</div>

<!-- Update User Group -->
<div class="modal fade" id="editModalUserGroup" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            @*<form asp-action="Update" id="EditForm" method="post">*@
                <form id="updateForm" method="post">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Edit Model</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">

                            <input class="updateId" type="hidden" asp-for="_UserGroup.GroupCode" />
                            <label asp-for="_UserGroup.GroupName" class="control-label"></label>
                            <input id="groupName" asp-for="_UserGroup.GroupName" class="form-control" />
                            <span asp-validation-for="_UserGroup.GroupName" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">Close</button>
                        <button id="btnUpdate" type="button" class="btn btn-primary">Save changes</button>
                    </div>

                </form>
</div>
    </div>
</div>


@*<p>
    <a asp-action="Create" data-target="#newModalUserGroup">Create New</a>
    
</p>*@

<input type="hidden" id="GroupCode" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._UserGroup.GroupCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._UserGroup.GroupName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserGroups)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>

                    @*<a asp-action="Edit" asp-route-id="@item.GroupCode">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GroupCode">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GroupCode">Delete</a>*@

                    <a id="EditForm" class="btn-link" onclick="Editform('@item.GroupCode')">Edit</a> |
                    <a id="ShowModal" class="btn-link" onclick="Confirm('@item.GroupCode')">Delete</a>

                    @*<a id="EditForm" onclick="Editform('@item.GroupCode')">Edit</a> |*@
                    @*<a id="ShowModal" onclick="Confirm('@item.GroupCode')">Delete</a>*@

                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {

            $("#btnDelete").click(function () {
                var idD = $("#GroupCode").val();
                $.ajax({
                    type: "POST",
                    url: "/UserGroups/DeleteUserGroup",
                    data: { id: idD },
                    success: function (result) {
                        if (result) {
                            $("#GroupCode").val(null);
                            window.location.href = "/UserGroups/Index";
                        } else {
                            alert("Opps Something Wrong");
                        }
                    }
                })
            })

            $(".btnCancel").click(function () {
             /*alert("Save Button Clicked");*/
                window.location.href = "/UserGroups/Index";
            })
        //updateForm
            $("#btnAddNew").click(function () {
                /* alert("Save Button Clicked");*/

                var companyForm = $("#saveForm").serialize();
                $.ajax({
                    type: "POST",
                    url: "/UserGroups/Create",
                    data: companyForm,
                    success: function () {
                        window.location.href = "/UserGroups/Index"
                    }
                })
            })

            $("#btnUpdate").click(function () {
                /* alert("Save Button Clicked");*/

                var companyForm = $("#updateForm").serialize();
                $.ajax({
                    type: "POST",
                    url: "/UserGroups/Update",
                    data: companyForm,
                    success: function () {
                        window.location.href = "/UserGroups/Index"
                    }
                })
            })

        })

        var Confirm = function (id) {
            //alert("Enter Here");
            $("#GroupCode").val(id);
            $("#deleteModalUserGroup").modal('show');
            
        }

        var Editform = function (id) {
            
            $.ajax({
                type: "POST",
                url: "/UserGroups/GetUserGroup",
                data: { id: id },
                success: function (response) {
                    /*alert("Enter Here" + " " + response.name);*/
                    $("#editModalUserGroup").modal('show');
                    $("#groupName").val(response.name);
                    $(".updateId").val(response.code);

                }
            });
        }

    </script>
}